
<%= simple_form_for @project, url: url, remote: true do |f| %>
  <%= f.input :name %>
  <%= f.input :blurb %>
  <%= f.association :client, label_method: :name_of_co, :value_method => :id, :include_blank => false %>
  <%= f.input :expiration %>
  <%= f.input :active %>
  <%= f.association :admin, collection: Admin.where(is_project_manager: true), :include_blank => false, label: 'Project Lead' %>
  <%= f.input :git_repo_url %>
  <%= f.input :dev_server_url %>

  <%= f.button :submit %>
<% end %>
