<form id="mech-bug-form" role="form" action="/bugs" method="post">
  <div class="form-group">
    <input type="text" name="bug[name]" class="form-control" id="form-name" placeholder="Your Name">
  </div>
  <div class="form-group">
    <fieldset>
      <textarea class="form-control" name="bug[description]" id="form-description" placeholder="Description of Bug"></textarea>
    </fieldset>
  </div>
  <a id='mech-bug-submit' class="btn btn-default">Submit</a>
  <!-- the href target should be client_url, served by controller -->
  <!-- <a href='/' target='_blank' id='mech-bug-list' class="btn btn-default">View Bugs</a> -->
</form>
