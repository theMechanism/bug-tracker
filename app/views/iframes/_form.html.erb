<%= simple_form_for @bug, url: project_bugs_path(@project), remote: true	 do |f| %>
 
	<%= f.input :name %>
	<%= f.input :description %>

	<%= f.input :url, as: :hidden %>
	<%= f.input :browser, as: :hidden %>
	<%= f.input :params, as: :hidden %>
	<%= f.input :width, as: :hidden %>
	<%= f.input :height, as: :hidden %>
	<%= f.input :browser_version, as: :hidden %>
	<%= f.input :os, as: :hidden %>
	<%= f.input :ua, as: :hidden %>

	<%= f.button :submit, 'Submit' %>

<% end %>

